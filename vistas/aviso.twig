{% extends 'layout.twig' %}
{% block aviso %}
         <div class="row">
            <div class="col-sm-12">
            {% for aviso in avisos %}
                <div class="bg-soluticket">
                        <div class="d-flex justity-content-center align-items-center">
                            <div class="container py-3">
                                <div class="publicacion-nueva">
                                    <div class="titulo-publicacion my-3">
                                        <h3>Aviso de Privacidad</h3>
                                        <div class="descripcion-publicacion"><h4>{{ aviso.titulo }}</h4></div>
                                    </div>
                
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="container py-5">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="publicacion-nueva">
                                <div class="autor-publicacion d-flex align-items-center p-3">
                                    <div class="d-flex flex-column">
                                        <div class="d-flex align-items-center">
                                            <h4 class="bolder">Por: </h4><h4 class="ml-2 bolder">Soluticket</h4></div>
                                        <div class="d-flex flex-column flex-md-row">
                                            <h4 class="bolder">Actualizado el:</h4><h4 class="ml-2 bolder">{{ aviso.updated_at }}</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="contenido-publicacion p-3">{{ aviso.articulo|raw }}</div>
                            </div>

                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

  {% endblock %}