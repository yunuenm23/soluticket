{% extends 'layoutAdmin.twig' %}
{% block puntosdeventa %}
<div class="container bg-white py-3">
    <h3 class="">Editar punto de venta</h3>
  <div class="col-sm-12"><h3><a href="{{ 'admin/puntosdeventa'|url }}" class="btn btn-outline-danger"><i style="font-size: 2em;" class="fas fa-chevron-left"></i></a></h3></div>

  <div class="col-sm-12 ">
    <div class="card">
          <div class="card-header bg-dark">
              <h3 class="card-title text-white">Editar Punto de venta</h3>
          </div>
           <div class="col-sm-12 mt-2">
                {% if errors %}
                    <div class="alert alert-danger">Imagen no guardada, revisa las restricciones de subida de archivo.</div>
                {% endif %}
                {% if resultado %}
                    <div class="alert alert-success">Punto de venta actualizado</div>
                {% endif %}
            </div>
           {% for pventa in puntosdeventa %}
          <form class="card" method="post" enctype="multipart/form-data">
            <div class="card-body bg-light">

            <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Lugar de venta</label>
                            <input type="text" name="establecimiento" class="form-control" value="{{ pventa.establecimiento }}" required>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <h4>Descripción</h4>
                            <textarea id="editor1" name="contenido" rows="25" class="p-4"> {{ pventa.contenido }} </textarea>
                            <script>
                                CKEDITOR.replace('editor1');
                            </script>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <select class="custom-select" name="evento" required>
                                {% for eventosid in eventoid %}
                                    <option value="{{ eventosid.id }}" selected="selected">{{ eventosid.id }} - {{ eventosid.nombre }} - {{ eventosid.fecha }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-12 d-flex justify-content-between">
                        <div class="alert alert-warning">
                            <label for="slide">Subir imagen:
                                <a><br>Dimensiones: 400x300<br>Tamaño máximo: 1M<br>Formatos permitidos: JPEG, JPG, PNG</a>
                            </label> 
                            <input type="file" class="form-control-file" name="thumb" id="thumbnail">
                        </div>
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-pinterest">Guardar</button>
                        </div>
                    </div>
                    
                 </div>
                
                </div>
            </form>
            {% endfor %}
      </div>
    </div>

  </div>
</div>
{% endblock %}