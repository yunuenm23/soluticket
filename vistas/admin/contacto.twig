{% extends 'layoutAdmin.twig' %}
{% block contacto %}
<div class="container bg-white py-3">
    <h3 class="">Contacto</h3>
  <div class="col-sm-12"><h3><a href="{{ 'admin/'|url }}" class="btn btn-outline-danger"><i style="font-size: 2em;" class="fas fa-chevron-left"></i></a></h3></div>

  <div class="col-sm-12 ">
            <div class="card-header bg-dark">
                <h3 class="card-title text-white">Datos de Contacto</h3>
            </div>
            <form class="card" method="post" enctype="multipart/form-data" action="{{ 'admin/contacto/1' | url }}">
                {% if errors %}
                    <div class="alert alert-danger">No se pudo actualizar.</div>
                {% endif %}
                {% if resultado %}
                    <div class="alert alert-success">Datos actualizados</div>
                {% endif %}
                <div class="card-body bg-light">
                {% for contacto in contactos %}
                <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Contacto</label>
                                <input type="text" name="contacto" value="{{ contacto.contacto }}" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Faq</label>
                                <input type="text" name="faq" class="form-control" value="{{ contacto.faq }}">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Llamadas</label>
                                <input type="text" name="llamada" class="form-control" value="{{ contacto.llamada }}">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Soporte</label>
                                <input type="text" name="soporte" class="form-control" value="{{ contacto.soporte }}">
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-6 form-group">
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-pinterest">Guardar</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </form>
    </div>
  </div>

</div>
{% endblock %}