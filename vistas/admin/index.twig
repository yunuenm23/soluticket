{% extends 'layoutAdmin.twig' %}
{% block admin %}

    <div class="page-header py-4"><h1 class="page-title ml-4">Panel de administración</h1></div>
        <div class="row row-cards">

            <div class="col-sm-12">

                    <div class="card">
                        <div class="card-header bg-primary"> <h3 class="card-title text-white">Carousel</h3> </div>
                        <div class="card-body">
                            <div id="carousel-controls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                {% for main in carousel %}
                                    <div class="carousel-item {{ main.activo }}">
                                        <img class="d-block w-100" alt="" src="../{{ main.slide }}" data-holder-rendered="true">
                                    </div>
                                {% endfor %}
                                {% for evento in eventos %}
                                    <div class="carousel-item">
                                        <img class="d-block w-100" alt="" src="../{{ evento.slide }}" data-holder-rendered="true">
                                    </div>
                                {% endfor %}                  
                                </div>
                                <a class="carousel-control-prev" href="#carousel-controls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-controls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <div>
                            <a class="btn btn-outline-success m-2" href="{{ 'admin/carousels/' | url }}">Todos <i class="fe fe-eye"></i></a>
                        </div>
                    </div>
            </div>       

            <div class="col-lg-6 col-sm-12 mb-5">
                <a class="btn btn-outline-primary" href="{{ 'admin/datos/1' | url }}">
                    <div class="h2 m-0 "><i class="fe fe-edit-2"></i></div>
                    <div class="h3">Datos generales</div>
                </a>
            </div>

            <div class="col-lg-6 col-sm-12 mb-5">
                <a class="btn btn-outline-primary" href="{{ 'admin/clientes' | url }}">
                    <div class="h2 m-0 "><i class="fe fe-edit-2"></i></div>
                    <div class="h3">Clientes</div>
                </a>
            </div>

             <div class="col-sm-12 mb-5">
                <a class="btn btn-outline-primary" href="{{ 'admin/contacto/1' | url }}">
                    <div class="h2 m-0 "><i class="fe fe-edit-2"></i></div>
                    <div class="h3">Contacto</div>
                </a>
            </div>

            <div class="col-sm-12" style="width: 100%; height: 100%;">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-white">Anuncios de Google</h3>
                    </div>
                    <div class="table-responsive">
                    <table class="table card-table table-striped table-center table-hover">
                        <thead class="text-center">
                            <tr>
                                <th>Anuncio</th>
                                <th>Sección</th>
                                <th><i class="fas fa-info"></i></th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            {% for google in adwords %}
                                <tr>
                                    <td>{{ google.script|raw }}</td>
                                    <td>{{ google.seccion }}</td>
                                    <td class="w-1">
                                    <a href="javascript:void(0)" class="btn btn-danger btn-sm" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fe fe-align-center"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="{{ 'admin/googleditar/' | url }}{{ google.id }}">Editar</a>
                                    </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-sm-12">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-white">Banners</h3>
                    </div>
                    <div class="card-body">
                    <div id="controls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% for bannerid in banner %}
                            <div class="carousel-item active">
                                <img class="d-block w-100" alt="" src="../{{ bannerid.img_banner }}" data-holder-rendered="true">
                            </div>
                            {% endfor %}
                            {% for banner in banners %}
                            <div class="carousel-item">
                                <img class="d-block w-100" alt="" src="../{{ banner.img_banner }}" data-holder-rendered="true">
                            </div>
                            {% endfor %}                  
                            </div>
                            <a class="carousel-control-prev" href="#controls" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#controls" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div><a class="btn btn-outline-danger mt-3" href="{{ 'admin/banners' | url }}">Cambiar <i class="fe fe-eye"></i></a></div>
                    </div>               
                </div>
            </div>

            <div class="col-lg-4 col-sm-12">
                <div class="card">
                  <div class="card-header bg-primary">
                    <h3 class="card-title text-white">Newsletter</h3>
                  </div>
                  <div class="card-body o-auto" style="height: 24rem">
                    <ul class="list-unstyled list-separated">
                    {% for news in newsletter %}
                      <li class="list-separated-item">
                        <div class="row align-items-center">
                          <div class="col">
                            <div>
                              <a href="javascript:void(0)" class="text-inherit">{{ news.nombre }}</a>
                            </div>
                            <small class="d-block item-except text-sm text-dark h-1x">{{ news.correo }}</small>
                          </div>
                          <div class="col-auto">
                            <a href="javascript:void(0)" class="btn btn-danger btn-sm" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fe fe-align-center"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{ 'admin/ver/' | url }}{{ post.id }}">Consultar</a>
                                <a class="dropdown-item" href="{{ 'admin/blogeditar/' | url }}{{ post.id }}">Editar</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item d-flex align-items-center" href="{{ 'admin/newsletter/eliminar/' | url }}{{ post.id }}">
                                <i class="text-danger fe fe-trash mr-1"></i>Eliminar</a>
                            </div>
                          </div>
                        </div>
                      </li>
                     {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>

            <div class="col-sm-12">
               <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-white">Banner 1140x160</h3>
                    </div>
                    <div class="card-body">
                     {% for large in bannerlarge %}
                        <a class="p-1 bg-light"><img src="../{{ large.img_banner }}"></a>
                    {% endfor %}
                    <div><a class="btn btn-outline-danger mt-3" href="{{ 'admin/banners' | url }}">Cambiar <i class="fe fe-eye"></i></a></div>
                    </div>
               </div>
            </div>

            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header bg-primary">
                        <h3 class="card-title text-white">Publicaciones recientes</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table card-table table-vcenter text-nowrap table-hover">
                            <thead class="text-center bg-light">
                                <tr>
                                    <th class="text-dark">No.</th>
                                    <th class="text-dark">Thumbnail</th>
                                    <th class="text-dark">Titulo</th>
                                    <th class="text-dark">Fecha</th>
                                    <th class="text-dark">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for post in blog %}
                                    <tr>
                                        <td class="text-center">
                                                <span class="text-muted">{{ post.id }}</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="avatar mr-3 align-self-center" style="background-image: url(../{{ post.img_blog }} )"></span>
                                        </td>
                                        <td class="text-center">{{ post.titulo }}</td>
                                        <td class="text-center">{{ post.fecha }}</td>
                                        <td class="text-center">
                                            <a href="javascript:void(0)" class="btn btn-danger btn-sm" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fe fe-align-center"></i></a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="dropdown-item" href="{{ 'admin/ver/' | url }}{{ post.id }}">Consultar</a>
                                                <a class="dropdown-item" href="{{ 'admin/blogeditar/' | url }}{{ post.id }}">Editar</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item d-flex align-items-center" href="{{ 'admin/blog/eliminar/' | url }}{{ post.id }}"><i class="text-danger fe fe-trash mr-1"></i>Eliminar</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </div>
</div> 

{% endblock %}