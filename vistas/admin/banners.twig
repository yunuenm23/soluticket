{% extends 'layoutAdmin.twig' %}

{% block banners %}
    <div class="container bg-white py-3">
        <h3 class="">Banners</h3>
        <div class="col-sm-12">
            <h3>
                <a href="{{ 'admin/banners'|url }}" class="btn btn-outline-danger">
                    <i style="font-size: 2em;" class="fas fa-chevron-left"></i>
                </a>
            </h3>
        </div>
        
    <div class="col-sm-12 ">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="card-title text-white">Cambiar banners</h3>
            </div>
            <form class="card" method="post" enctype="multipart/form-data">
            <div class="col-sm-12">
                    {% if errors %}
                        <div class="alert alert-danger">No se pudo actualizar cambiar la imagen, revisa las restricciones de subida.</div>
                    {% endif %}
                    {% if resultado %}
                        <div class="alert alert-success mt-2">Banner actualizado</div>
                    {% endif %}
                </div>
                <div class="card-body bg-light">
                <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Link</label>
                                <input type="text" name="link" class="form-control">
                            </div>
                        </div>
                        </div>
                        <div class="col-sm-12 form-group">
                            <div class="form-label">¿Es un banner para el carousel?</div>
                            <div class="custom-controls-stacked">
                                <label class="custom-control custom-radio custom-control-inline"><input type="radio" class="custom-control-input" name="FE" value="1" <?php if (isset($fefw) && $fefw=="1") echo "checked";? required> <span class="custom-control-label">Si</span></label>
                                <label class="custom-control custom-radio custom-control-inline"><input type="radio" class="custom-control-input" name="FE" value="0" <?php if (isset($fefw) && $fefw=="0") echo "checked";? required> <span class="custom-control-label">No</span></label>
                            </div>
                        </div>
                        <div class="col-sm-12 d-flex justify-content-between">
                            <div class="alert alert-warning">
                                <label for="slide">Imagen para carousel:
                                    <a><br>Dimensiones: 1280x500<br>Imagen inferior: <br>Dimensiones 1140x160<br>Tamaño máximo: 1M<br>Formatos permitidos: JPEG, JPG, PNG</a>
                                </label>                      
                                <input type="file" class="form-control-file" name="thumbnail" id="thumbnail">
                            </div>                
                        </div>
                        <div class="col-lg-12 col-sm-6 form-group">
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-pinterest">Cambiar imagen</button>
                            </div>
                        </div>
                    </div>
                    </div>
            </form>
        </div>
    </div>    

    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="card-title text-white">Banners</h3>
            </div>
            <div class="table-responsive">
                <table class="table card-table table-center text-nowrap table-hover">
                <thead class="text-center bg-light">
                <tr>
                    <th class="text-dark">No.</th>
                    <th class="text-dark">Thumbnail</th>
                    <th class="text-dark">Link</th>
                    <th class="text-dark">Actualizado</th>
                    <th class="text-dark">Opciones</th>
                </tr>
                </thead>
                <tbody <spa class="text-center" 
                {% for banner in banners %} 
                <tr> <td>{{ banner.id }}</span></td>
                    <td>
                    <span class="avatar mr-3 align-self-center" style="background-image: url(../{{ banner.img_banner }})"></span>
                    </td>
                    <td >{{ banner.url[start:30] }}...</td>
                    <td>{{ banner.updated_at }}</td>
                    <td class="text-center">
                        <a href="javascript:void(0)" class="btn btn-danger btn-sm" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fe fe-align-center"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ 'admin/editarbanner/' | url }}{{ banner.id }}">Editar</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ 'admin/eliminarbanner/' | url }}{{ banner.id }}">Eliminar</a>
                    </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
                </table>
            </div>
        </div>
    </div> 
</div>
{% endblock %}