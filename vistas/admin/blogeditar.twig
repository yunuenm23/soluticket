{% extends 'layoutAdmin.twig' %}
{% block blogeditar %}
<div class="container bg-white py-3">
    <h3 class="">Editar publicación</h3>
  <div class="col-sm-12"><h3><a href="{{ 'admin/blog'|url }}" class="btn btn-outline-danger"><i style="font-size: 2em;" class="fas fa-chevron-left"></i></a></h3></div>
    <div class="col-sm-12 ">
        <div class="card-header bg-dark">
            <h3 class="card-title text-white">Editar publicación</h3>
        </div>
         <form class="card" method="post" enctype="multipart/form-data">
            <div class="col-sm-12 mt-3">
                {% if errors %}
                    <div class="alert alert-danger">Thumbnail no guardado, revisa las restricciones de subida de archivo.</div>
                {% endif %}
                {% if resultado %}
                    <div class="alert alert-success">Publicación actualizada</div>
                {% endif %}
            </div>
            <div class="card-body bg-light">
                <div class="row">
                {% for post in blog %}
                    <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Titulo</label>
                                <input type="text" name="titulo" class="form-control" value="{{ post.titulo }}">
                            </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label class="form-label">Fecha</label>
                            <input type="date" name="fecha" class="form-control" value="{{ post.fecha }}">
                        </div>
                    </div> 
                    <div class="col-sm-12">
                            <div class="form-group">
                                <label class="form-label">Descripción</label>
                                <textarea style="width: 100%; height: 100%;" class="form-control" name="descripcion" rows="3">{{ post.descripcion }}</textarea>
                            </div>
                    </div>            
                    <div class="col-sm-12">
                            <div class="form-group">
                            <h4>Articulo</h4>
                            <textarea id="editor1" name="articulo" rows="25" class="p-4">{{ post.articulo }}</textarea>
                            <script>
                                CKEDITOR.replace( 'editor1' );
                            </script>
                            </div>
                    </div>                   
                    <div class="col-sm-12 d-flex justify-content-between">
                        <div class="alert alert-warning">
                            <label for="thumbnail">Subir imagen:
                                 <a><br>Dimensiones: 850x440<br>Tamaño máximo: 1M<br>Formatos permitidos: JPEG, JPG, PNG</a>
                             </label>  
                            <input type="file" class="form-control-file" name="thumbnail" id="thumbnail">
                        </div>
                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-pinterest">Guardar</button>
                        </div>
                    </div>
                    {% endfor %}    
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
{% endblock %}